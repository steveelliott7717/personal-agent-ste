{
    "verb": "browser.run",
    "args": {
        "url": "https://www.saucedemo.com/",
        "timeout_ms": 60000,
        "steps": [
            {
                "wait_for": {
                    "selector": "#user-name",
                    "state": "visible"
                }
            },
            {
                "fill": {
                    "selector": "#user-name",
                    "value": "standard_user"
                }
            },
            {
                "fill": {
                    "selector": "#password",
                    "value": "secret_sauce"
                }
            },
            {
                "click": "#login-button"
            },
            {
                "wait_for": {
                    "selector": "#react-burger-menu-btn",
                    "state": "visible"
                }
            },
            {
                "click": "#react-burger-menu-btn"
            },
            {
                "wait_for": {
                    "selector": "#logout_sidebar_link",
                    "state": "visible"
                }
            },
            {
                "click": "#logout_sidebar_link"
            },
            {
                "wait_for": {
                    "selector": "#login-button",
                    "state": "visible"
                }
            },
            {
                "screenshot": {
                    "path": "saucedemo_logged_out.png",
                    "full_page": true
                }
            }
        ],
        "return_html": false
    }
}
