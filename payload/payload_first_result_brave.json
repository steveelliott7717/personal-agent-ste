{
    "verb": "browser.run",
    "args": {
        "url": "https://search.brave.com/search?q=site%3Ahttpbin.org+gzip",
        "timeout_ms": 60000,
        "steps": [
            {
                "wait_for": {
                    "state": "domcontentloaded"
                }
            },
            {
                "wait_for": {
                    "time_ms": 800
                }
            },
            {
                "wait_for": {
                    "selector": "a[data-testid='result-title'], a.result-header, a[href^='http']",
                    "state": "visible"
                }
            },
            {
                "evaluate": {
                    "js": "() => { const anchors = Array.from(document.querySelectorAll(\"a[data-testid='result-title'], a.result-header, a[href^='http']\")); const pick = anchors.find(a => { try { return new URL(a.href, location.origin).hostname.includes('httpbin.org'); } catch { return false; } }); if (!pick) return null; const href = pick.href; window.location.href = href; return href; }"
                }
            },
            {
                "wait_for": {
                    "state": "load"
                }
            },
            {
                "wait_for": {
                    "time_ms": 800
                }
            },
            {
                "screenshot": {
                    "path": "brave_first.png",
                    "full_page": true
                }
            }
        ],
        "return_html": false
    }
}
